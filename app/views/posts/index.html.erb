<!-- app/views/posts/index.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Sahash|Portfolio</title>
  <%= stylesheet_link_tag :application, media: :all %>
  <%= csrf_meta_tags %>
</head>
<body>
     
	  <div clas="conatainer"> 
      <div class="row">
        <!-- <div class="col-md-12 col-md-offset-2"> -->
          <h1><center>My Blog-Posts</center></h1>
          <br>
		      <% @posts.each do |post| %>
            <div class="col-md-8 col-md-offset-2">
              <div class="well">
				        <img src='<%= post.image %>' width="200px"/><br>
	
				          <strong>Title:</strong> <%= post.title %> <br>

				          <strong>Description:</strong> <%= post.description %> <hr>
		
				          <%= link_to "Edit Post", edit_post_path(post), class: "btn btn-primary", id:"linkId" %>
				      
				          <%= link_to "Delete",  post, method: :delete, class: "btn btn-danger", id:"linkId"  %>
			        </div>
			      </div> <br>
		      <% end %>
	      <!-- </div> -->
      </div>
    </div>


  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= yield %>
      </div>
    </div>
  </div>

  <%= javascript_include_tag :application %>

</body>
</html>


