<!-- app/views/posts/index.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>Sahash|Portfolio</title>
  <!-- bootstrap css -->
  <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <%= stylesheet_link_tag :application, media: :all %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">SahashPortfolio</a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><a href="/posts">My Blogs</a></li>
          <li><a href="/posts/new">New Blog</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

   <h1>My Blogs</h1>
   <div class="well" width="100px">
	
		<% @posts.each do |post| %>
			<div>
				<img src='<%= post.image %>' width="200px"/><br>
	
				<strong>Title:</strong> <%= post.title %> <br>

				<strong>Description:</strong> <%= post.description %> <br>
		
				<%= link_to "Edit Post", edit_post_path(post), class: "btn btn-primary", id:"linkId" %>
				<br>
				<%= link_to "Delete", post, class: "btn btn-danger", id:"linkId" %>
			
			</div> <br>
		<% end %>
	</div>


  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= yield %>
      </div>
    </div>
  </div>

  <%= javascript_include_tag :application %>

  <!-- bootstrap js -->
  <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

</body>
</html>